@model ElfakMedic.Models.ViewModels.CreateLekViewModel
@{
    Layout = "";
}

@using (Ajax.BeginForm("CreateLek", "Lekovi", new AjaxOptions { OnSuccess = "AjaxOnSuccessLek", OnFailure = "AjaxOnFailureLek", HttpMethod = "POST" }, new { @id = "form-create-lek", @autocomplete = "off" }))
{
<div>
    <div class="form-group modal-group">
        <div>
            @Html.LabelFor(m => m.Sifra)
            @Html.TextBoxFor(m => m.Sifra, new { @class = "form-control modal-input", @required = "required" })
        </div>
        <div>
            @Html.LabelFor(m => m.Naziv)
            @Html.TextBoxFor(m => m.Naziv, new { @class = "form-control modal-input", @required = "required" })
        </div>
    </div>
    <div class="form-group modal-group">
        <div>
            @Html.LabelFor(m => m.JacinaLeka)
            @Html.TextBoxFor(m => m.JacinaLeka, new { @class = "form-control modal-input" })
        </div>
        <div>
            @Html.LabelFor(m => m.SelectedProizvodjac)
            @Html.DropDownListFor(m => m.SelectedProizvodjac, new SelectList(Model.SelectListProizvodjaci.Items,
                                    "Value", "Text", Model.SelectListProizvodjaci.SelectedValue), new { @class = "form-control", @required = "required", @style = "width: 250px" })
        </div>
    </div>
    <div class="form-group modal-group">
        <div>
            @Html.LabelFor(m => m.SelectedRFZO)
            @Html.DropDownListFor(m => m.SelectedRFZO, new SelectList(Model.SelectListRFZO.Items,
                                    "Value", "Text", Model.SelectListRFZO.SelectedValue), new { @class = "form-control modal-input", @required = "required" })
        </div>
        <div>
            @Html.LabelFor(m => m.DDD)
            @Html.TextBoxFor(m => m.DDD, new { @class = "form-control modal-input", @type = "number", @min = "0", @max = "99999999.99" })
        </div>
    </div>
    <div class="form-group modal-group">
        <div>
            @Html.LabelFor(m => m.NabavnaCena)
            @Html.TextBoxFor(m => m.NabavnaCena, new { @class = "form-control modal-input", @type = "number", @min = "0", @max = "99999999.99" })
        </div>
        <div>
            @Html.LabelFor(m => m.ProcenatPoreza)
            @Html.TextBoxFor(m => m.ProcenatPoreza, new { @class = "form-control modal-input", @type = "number", @min = "0", @max = "100" })
        </div>
    </div>
    <div class="form-group modal-group">
        <div style="display:flex; flex-direction:column;">
            @Html.LabelFor(m => m.NaRecept)
            @Html.CheckBoxFor(m => m.NaRecept, new { @class = "form-check-input large-checkbox" })
        </div>
        <div>
            @Html.LabelFor(m => m.SelectedDijagnoze)
            <i class="glyphicon glyphicon-info-sign" data-toggle="tooltip" data-placement="top" title="Simbol % menja 0 ili više brojnih karaktera. Opseg vrednosti pišite između [ i ]"></i>
            <select id="mySelect2" name="SelectedDijagnoze" class="js-data-example-ajax" multiple="multiple" style="width: 450px;"></select>
        </div>
    </div>
    <div class="form-group modal-group">
        <div>
            @Html.LabelFor(m => m.ProcenatUcesca)
            @Html.TextBoxFor(m => m.ProcenatUcesca, new { @class = "form-control modal-input", @type = "number", @min = "0", @max = "100", @disabled = "disabled" })
        </div>
        <div>
            @Html.LabelFor(m => m.ProcenatMarze)
            @Html.TextBoxFor(m => m.ProcenatMarze, new { @class = "form-control modal-input", @type = "number", @min = "0", @max = "100" })
        </div>
    </div>
    <div class="infoDiv">
        <i class="glyphicon glyphicon-info-sign"></i> Ukupna cena leka će biti izračunata tako što se ceni na veliko dodaje procenat marže i procenat poreza.
    </div>
</div>
}
