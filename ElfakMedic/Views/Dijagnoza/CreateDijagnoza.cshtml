@model ElfakMedic.Models.ViewModels.CreateDijagnozaViewModel
@{
    Layout = "";
}

@using (Ajax.BeginForm("CreateDijagnoza", "Dijagnoza", new AjaxOptions { OnSuccess = "AjaxOnSuccess", OnFailure = "AjaxOnFailure", HttpMethod = "POST" }, new { @id = "form-create-dijagnoza", @autocomplete = "off" }))
{
    <div>
        <div class="form-group">
            @Html.LabelFor(m => m.SelectedCategory)
            @Html.DropDownListFor(m => m.SelectedCategory, new SelectList(Model.SelectListCategory.Items,
                                    "Value", "Text", Model.SelectListCategory.SelectedValue), "Izaberite kategoriju dijagnoze", new { @class = "form-control", @required = "required" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.SelectedSubCategory)
            @Html.DropDownListFor(m => m.SelectedSubCategory, new SelectList(""), "Izaberite podkategoriju dijagnoze", new { @class = "form-control", @disabled = "disabled", @required = "required" })
        </div>
        <div class="form-group" id="divIdCategory">
            @Html.LabelFor(m => m.Id_dijagnoza)
            <div class="input-group">
                <span class="input-group-addon prefixCategoryId"></span>
                <input type="text" onchange="regexValidation()" maxlength="4" id="SelectedIdCategory" class="form-control" name="SelectedIdCategory" disabled="disabled" style="width: 80px;" required="required">
            </div>
            @Html.ValidationMessageFor(m => m.SelectedIdCategory, "", new { @class = "idValidation", @style = "color: red; font-weight: 700;" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.NazivSrpski)
            @Html.TextBoxFor(m => m.NazivSrpski, new { @class = "form-control", @required = "required" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.NazivLatinski)
            @Html.TextBoxFor(m => m.NazivLatinski, new { @class = "form-control", @required = "required" })
        </div>
    </div>
}